{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": "Vega Lite Chart",
  "width": 800,
  "height": 600,
  "data": {
    "url": "https://raw.githubusercontent.com/Phillip-M-Ebdon/vega_lite_map_homework/main/data/honey.csv"
  },
  "transform": [
    {
      "lookup": "State",
      "from": {
        "data": {
          "url": "https://cdn.jsdelivr.net/npm/us-atlas@3/states-10m.json",
          "format": {
            "type": "topojson",
            "feature": "states"
          }
        },
        "key": "properties.name"
      },
      "as": "geo"
    },
    {
      "filter": {
        "field": "Year",
        "equal": "2000"
      }
    }
  ],
  "projection": {
    "type": "albersUsa"
  },
  "mark": {"type": "geoshape", "tooltip":{"content":"data"}},
  "encoding": {
    "shape": {
      "field": "geo",
      "type": "geojson"
    },
    "color": {
      "condition": {
        "selection": "pts",
        "field": "Honey_producing_colonies",
        "type": "quantitative"
      },
      "value": "grey"
    }
  },
  "selection": {
    "pts": {
      "type": "single",
      "on": "mouseover"
    }
  }
}